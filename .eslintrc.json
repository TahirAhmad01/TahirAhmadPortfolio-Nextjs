{
  "extends": ["next/core-web-vitals", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "eslint-disable-next-line": 0,
    "react/jsx-no-duplicate-props": 0,
    "no-console": 0,
    "indent": 0,
    "linebreak-style": 0,
    "prettier/prettier": [
      {
        "trailingComma": "es5",
        "printWidth": 100,
        "tabWidth": 2,
        "semi": true
      }
    ]
  },

  "plugins": ["prettier"]
}
